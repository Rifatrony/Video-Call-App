<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#469FE6"
    android:padding="10dp"
    tools:context=".Activity.SignUpActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/appicon"
        android:layout_marginBottom="70dp"
        />

    <EditText
        android:id="@+id/signUpNameEditTextId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/amaranth"
        android:hint="Name"
        android:layout_marginBottom="10dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/signUpEmailEditTextId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/amaranth"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/signUpPasswordEditTextId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_style"
        android:drawableLeft="@drawable/password_icon"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:fontFamily="@font/amaranth"
        android:hint="Password"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/signUpButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_style"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        />

    <Button
        android:id="@+id/alreadyHaveAccountButtonId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_style"
        android:layout_marginTop="10dp"
        android:text="Already Have an Account"
        android:textAllCaps="false"
        />

    <ProgressBar
        android:id="@+id/progressBarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E41010"
        android:outlineSpotShadowColor="@color/white"
        android:visibility="gone" />

</LinearLayout>